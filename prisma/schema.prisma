generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id           String   @id @default(uuid()) @db.Uuid
  email        String   @unique
  firstName    String?
  lastName     String?
  passwordHash String?
  joinDate     DateTime @default(now()) @db.Timestamptz()
  files        File[]
  folders      Folder[]
  tags         Tag[]
}

model File {
  id         String   @id @default(uuid()) @db.Uuid
  name       String
  url        String   @unique //file location
  owner      User     @relation(fields: [ownerId], references: [id])
  ownerId    String   @db.Uuid
  folder     Folder?  @relation(fields: [folderId], references: [id])
  folderId   String?  @db.Uuid
  uploadDate DateTime @default(now()) @db.Timestamptz()
  size       Int
  type       String

  shareExpirationDate DateTime? @db.Timestamptz()

  tags Tag[]

  @@index([ownerId])
}

model Folder {
  id           String   @id @default(uuid()) @db.Uuid
  name         String
  owner        User     @relation(fields: [ownerId], references: [id])
  ownerId      String   @db.Uuid
  creationDate DateTime @default(now()) @db.Timestamptz()

  files File[]
  tags  Tag[]

  // Folder nesting
  parentFolder   Folder?  @relation("FolderToFolder", fields: [parentFolderId], references: [id])
  parentFolderId String?  @db.Uuid
  childFolders   Folder[] @relation("FolderToFolder")

  shareExpirationDate DateTime? @db.Timestamptz()

  @@index([ownerId])
}

model Tag {
  id      Int      @id @default(autoincrement())
  name    String
  owner   User     @relation(fields: [ownerId], references: [id])
  ownerId String   @db.Uuid
  files   File[]
  folders Folder[]

  @@unique([ownerId, name])
}
