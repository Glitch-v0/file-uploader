generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id      String   @id
  sid     String   @unique
  data    String
  expires DateTime
}

model User {
  id            String   @id @default(uuid()) @db.Uuid
  email         String   @unique
  first_name    String
  last_name     String
  password_hash String
  files         File[]
  folders       Folder[]
  tags          Tag[]
}

model File {
  id           String   @id @default(uuid()) @db.Uuid
  name         String
  url          String   @unique //file location
  owner        User     @relation(fields: [ownerId], references: [id])
  ownerId      String   @db.Uuid
  folder       Folder?  @relation(fields: [folderId], references: [id])
  folderId     String?  @db.Uuid
  creationDate DateTime @db.Timestamptz()
  tags         Tag[]

  @@index([ownerId])
}

model Folder {
  id           String   @id @default(uuid()) @db.Uuid
  name         String
  url          String   @unique //folder location
  owner        User     @relation(fields: [ownerId], references: [id])
  ownerId      String   @db.Uuid
  creationDate DateTime @db.Timestamptz()
  files        File[]
  tags         Tag[]

  @@index([ownerId])
}

model Tag {
  id      Int      @id @default(autoincrement())
  name    String
  owner   User     @relation(fields: [ownerId], references: [id])
  ownerId String   @db.Uuid
  files   File[]
  folders Folder[]
}
