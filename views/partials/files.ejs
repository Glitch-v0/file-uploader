<% if (files) { %>
  <div>
    <h2>Files</h2>
    <div class="file-container">
      <% files.forEach(file => { %>
      <div class="file-card">
        <img class="icon" src="/icons/file.svg" alt="file" />
        <h3 class="file-name">
          <a href="/cloud<%= file.folderId ? `/${file.folderId}` : '' %>/<%= file.id %>/view">
            <%= file.name %>
          </a>          
        </h3>
        <a href="/cloud/<%= file.id %>/deleteFile">
          <img class="icon delete" src="/icons/delete.svg" alt="delete icon" />
        </a>
        <a href="/cloud/<%= file.id %>/updateFile">
          <img class="icon update" src="/icons/pencil.svg" alt="folder update">
        </a>
      </div>
      <% }) %>
    </div>
  </div>
<% } %>
